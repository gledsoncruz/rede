<%- if controller_name != 'sessions' %>
  <%= link_to "Logar", new_session_path(resource_name), :class => 'links_login logar' %>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Cadastrar", new_registration_path(resource_name), :class => 'links_login incluir_login' %>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
  <%= link_to "Esqueci minha senha?", new_password_path(resource_name), :class => 'links_login lembrar_senha' %>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Não recebeu as instruções de confirmação?", new_confirmation_path(resource_name), :class => 'links_login' %>
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Não recebeu as instruções de desbloqueio?", new_unlock_path(resource_name), :class => 'links_login' %>
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Logar com #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), :class => 'links_login' %>
  <% end -%>
<% end -%>